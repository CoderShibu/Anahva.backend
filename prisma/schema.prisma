datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id            String        @id @default(uuid())
  session_id    String        @unique
  language      String        @default("EN")
  demo          Boolean       @default(false)
  created_at    DateTime      @default(now())
  expires_at    DateTime
  last_active   DateTime      @default(now())
  
  journals      Journal[]
  chat_sessions ChatSession[]
  memories      Memory[]
  insights      Insight[]
  safety_events SafetyEvent[]
  audit_logs    AuditLog[]
  
  @@index([session_id])
  @@index([expires_at])
}

model Journal {
  id                String    @id @default(uuid())
  session_id        String
  encrypted_payload String
  allow_ai_memory   Boolean   @default(false)
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
  deleted_at        DateTime?
  
  session Session @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  
  @@index([session_id])
  @@index([created_at])
  @@index([deleted_at])
}

model ChatSession {
  id         String   @id @default(uuid())
  session_id String
  mode       String   @default("LISTEN")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  session Session @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  
  @@index([session_id])
}

model Memory {
  id         String    @id @default(uuid())
  session_id String
  embedding  String
  metadata   String
  created_at DateTime  @default(now())
  expires_at DateTime?
  
  session Session @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  
  @@index([session_id])
  @@index([expires_at])
}

model Insight {
  id           String   @id @default(uuid())
  session_id   String
  insight_type String
  data         String
  created_at   DateTime @default(now())
  
  session Session @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  
  @@index([session_id])
  @@index([insight_type])
}

model SafetyEvent {
  id         String   @id @default(uuid())
  session_id String
  event_type String
  severity   String
  metadata   String
  created_at DateTime @default(now())
  
  session Session @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  
  @@index([session_id])
  @@index([event_type])
  @@index([severity])
}

model AuditLog {
  id         String    @id @default(uuid())
  session_id String?
  action     String
  ip_address String?
  user_agent String?
  metadata   String?
  created_at DateTime  @default(now())
  
  session Session? @relation(fields: [session_id], references: [session_id], onDelete: SetNull)
  
  @@index([session_id])
  @@index([action])
  @@index([created_at])
}
